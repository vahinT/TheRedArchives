print("create exists:", "create" in globals())

import time
print("Current Time:", time.ctime())

WALL_SIZE = (5, 10, 1)
WALL_HEIGHT_Y = 5
CELL = 6


def wall(name, x, z):
    p = create.part(name)
    p.pos = (x, WALL_HEIGHT_Y, z)
    p.size = WALL_SIZE
    p.CanCollide = True
    p.Colour = "#FFFF00"
    return p


